  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />

      <title><%= content_for?(:title) ? yield(:title) : "CrowdCamper" %></title>
    
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "vendor/modernizr" %>
      <%= csrf_meta_tags %>
      
         <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
          <script>
          var map;
          function initialize() {     
            var mapOptions = {
              zoom: 12,
              center: new google.maps.LatLng(40.4183406, -3.691789,15)
            };
            map = new google.maps.Map(document.getElementById('map-canvas'),
              mapOptions);
          }

          google.maps.event.addDomListener(window, 'load', initialize);

          </script>
     


      <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
        <!--<script type="text/javascript" src="//use.typekit.net/wwu2exi.js"></script>
      <script type="text/javascript">try{Typekit.load();}catch(e){}</script>-->


     
    </head>

    <body>

        <div class="contain-to-grid sticky" data-options="sticky_on: large">
          <nav class="top-bar" data-topbar>
            <ul class="title-area">
              <li class="name">
                <h1 class="logo thin minuspacing"><%= link_to 'CrowdCamper', vans_path %></h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
            </ul>
            <section class="top-bar-section">

              <!-- Right Nav Section -->
            <ul class="right">
              <li>
                <% if user_signed_in? %>
                  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
                <% else %>
                  <%= link_to 'Sign in', new_user_session_path %>
                <% end %>   
              </li>
                
              <li>
                <% if user_signed_in? %>
                  <%= link_to current_user.email, destroy_user_session_path, method: :delete %>
                <% else %>
                  <%= link_to 'Register', new_user_registration_path %>
                <% end %> 
                
              </li>
  
            </ul>

             
            </section>
          </nav>
        </div>


        <div class="row">

          <div class="large-12 columns">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
          </div>
            <%= yield %>
          
        </div>
        
        
        <!-- Footer -->
      
        <footer >
            <hr />
            <div class="row">
              <div class="large-4 columns">
                <p>© CrowdCamper. 2014</p>
              </div>
              <div class="large-8 columns">
                <ul class="inline-list right">
                  <li><a href="#">¿Porqué CrowdCamper?</a></li>
                  <li><a href="#">¿Cómo funciona?</a></li>
                  <li><a href="#">Contacto</a></li>
                  <li><i class="fi-heart"></i></li>
                </ul>
              </div>
            </div>
        </footer>

        
        <%= javascript_include_tag "application" %>
        <script src="/assets/foundation/foundation.slider.js?body=1"></script>

   
    <!-- Other JS plugins can be included here -->

    <script>
      $(document).foundation();
    </script>
    </body>
  </html>